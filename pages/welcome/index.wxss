.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.progress-bar {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin: 60rpx 0;
}

.progress-step {
  width: 22%;
  height: 8rpx;
  background-color: #E0E0E0;
  border-radius: 4rpx;
}

.progress-step.active {
  background-color: #6E7BF2;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.description {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 80rpx;
}

.step-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 80rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}

.button-area {
  width: 100%;
  margin-top: 60rpx;
}

.next-btn, .start-btn {
  width: 90%;
  height: 90rpx;
  background-color: #6E7BF2;
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn {
  background-color: #FF6B6B;
} 