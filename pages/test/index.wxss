.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon {
  font-size: 48rpx;
  color: #333;
}

.progress-container {
  flex: 1;
}

progress {
  width: 100%;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
  text-align: right;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.question {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 80rpx;
  text-align: center;
}

.options {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.option-item {
  width: 100%;
  padding: 40rpx;
  margin-bottom: 30rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s;
}

.option-item.selected {
  background-color: #6E7BF2;
  color: white;
} 