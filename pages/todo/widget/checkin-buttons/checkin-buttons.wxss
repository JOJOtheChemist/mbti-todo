/* 打卡按钮区域 */
.quick-checkin-btns {
  display: flex;
  justify-content: space-between;
  margin: 16rpx 0;
}

/* 圆角矩形按钮 */
.checkin-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.checkin-btn:last-child {
  margin-right: 0;
}

.checkin-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-label {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.text-btn {
  background-color: #6E7BF2;
}

.image-btn {
  background-color: #4CAF50;
}

.audio-btn {
  background-color: #FF6B6B;
}

.audio-btn.recording {
  background-color: #FF3030;
  box-shadow: 0 0 0 4rpx rgba(255, 48, 48, 0.3);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 48, 48, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(255, 48, 48, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 48, 48, 0);
  }
}

/* 未解锁提示 */
.locked-hint {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 未解锁状态下的打卡容器 */
.locked-checkin-btns {
  display: flex;
  justify-content: space-between;
  margin: 0 0 16rpx;
  width: 100%;
}

.locked-checkin-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  background-color: #f0f0f0;
  color: #999;
  font-size: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.locked-checkin-btn:last-child {
  margin-right: 0;
}

.locked-text {
  font-size: 24rpx;
  color: #FF0000;
  font-weight: bold;
} 