.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F9F9F9;
}

.header {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.mbti-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.mbti-label {
  font-size: 28rpx;
  color: #666;
}

.mbti-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-right: 20rpx;
}

.retest-btn {
  font-size: 24rpx;
  color: #6E7BF2;
  padding: 4rpx 12rpx;
  border: 2rpx solid #6E7BF2;
  border-radius: 16rpx;
}

/* 新增：数据统计卡片样式 */
.statistics-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-wrap: wrap;
  position: relative;
}

.stat-item {
  flex: 1;
  min-width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.stats-more {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #6E7BF2;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 6rpx;
}

/* 修改：日期导航容器 */
.days-nav-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.day-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6E7BF2;
  font-size: 28rpx;
}

.day-arrow.disabled {
  color: #CCC;
}

.arrow-icon {
  font-weight: bold;
}

.days-nav {
  flex: 1;
  display: flex;
  justify-content: space-between;
  background-color: white;
  border-radius: 16rpx;
  padding: 16rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60rpx;
}

.day-text {
  font-size: 22rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.day-item.active .day-text {
  color: #6E7BF2;
  font-weight: bold;
}

.day-item.disabled .day-text,
.day-item.locked .day-text {
  color: #CCC;
}

.day-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #E0E0E0;
}

.day-item.active .day-indicator {
  background-color: #6E7BF2;
}

.day-indicator.completed {
  background-color: #4CAF50;
}

.tasks-container {
  flex: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

.day-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day-status {
  font-size: 22rpx;
  color: #4CAF50;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  background-color: #E8F5E9;
}

.day-status.locked-status {
  color: #FF0000;
  background-color: #FFEBEE;
}

.task-list {
  display: flex;
  flex-direction: column;
}

.task-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
  position: relative;
}

.task-item:last-child {
  border-bottom: none;
}

.task-item.locked-mode {
  opacity: 0.6;
}

.task-content {
  flex: 1;
  width: 100%;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.task-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-category {
  font-size: 20rpx;
  color: #999;
  background-color: #F5F5F5;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}

.task-reason {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 新增：打卡记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
}

.record-item {
  display: flex;
  margin-bottom: 12rpx;
  padding: 10rpx;
  border-radius: 12rpx;
  background-color: #F9F9F9;
}

.record-time {
  font-size: 20rpx;
  color: #999;
  width: 80rpx;
  min-width: 80rpx;
  margin-right: 10rpx;
  padding-top: 4rpx;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
}

.record-image {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.record-audio {
  display: flex;
  align-items: center;
}

.audio-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.audio-text {
  font-size: 22rpx;
  color: #666;
}

/* 未解锁提示 */
.locked-hint {
  margin-top: 16rpx;
  display: flex;
  justify-content: center;
}

.locked-text {
  font-size: 24rpx;
  color: #FF0000;
  font-weight: bold;
}

/* 打卡按钮区域 */
.checkin-actions {
  margin-top: 20rpx;
  width: 100%;
}

.action-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-icon {
  font-size: 20rpx;
  color: white;
  margin-right: 6rpx;
}

.action-label {
  font-size: 20rpx;
  color: white;
}

.text-btn {
  background-color: #6E7BF2;
}

.image-btn {
  background-color: #4CAF50;
}

.audio-btn {
  background-color: #FF6B6B;
}

/* 状态标签 */
.completion-status {
  position: absolute;
  top: 20rpx;
  right: 0;
}

.completed-tag {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  background-color: #4CAF50;
  color: white;
}

/* 报告按钮区域 */
.report-button-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.view-report-btn, .next-week-btn {
  width: 80%;
  height: 80rpx;
  font-size: 28rpx;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.view-report-btn {
  background-color: #6E7BF2;
}

.next-week-btn {
  background-color: #FF9500;
}

/* 打卡模态框 */
.checkin-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.checkin-modal.visible {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  flex: 1;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.checkin-form {
  margin-bottom: 20rpx;
}

.text-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.image-upload {
  width: 100%;
  height: 320rpx;
  border: 2rpx dashed #E0E0E0;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 50rpx;
  color: #CCC;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.audio-record {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.record-icon {
  font-size: 50rpx;
  margin-bottom: 8rpx;
}

.record-text {
  font-size: 24rpx;
  color: #666;
}

.record-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-text {
  font-size: 26rpx;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.rerecord-btn {
  font-size: 24rpx;
  color: #6E7BF2;
  padding: 8rpx 24rpx;
  border: 2rpx solid #6E7BF2;
  border-radius: 24rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #F0F0F0;
}

.submit-btn {
  background-color: #6E7BF2;
  color: white;
  font-size: 28rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-item.preview-mode {
  opacity: 0.7;
  background-color: #F9F9F9;
  border-radius: 10rpx;
  padding: 30rpx;
  margin: 0 0 20rpx 0;
}

/* 新的并排样式布局 */
.checkin-row {
  display: flex;
  flex-wrap: nowrap;
  margin-top: 20rpx;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.checkin-preview {
  width: 100%;
}

.preview-method {
  background-color: #F9F9F9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-right: 10rpx;
}

/* 占位内容样式 */
.placeholder-row {
  display: flex;
  align-items: stretch;
  margin-top: 20rpx;
  overflow-x: auto;
}

.placeholder-item {
  flex: 1;
  min-width: 200rpx;
  margin-right: 20rpx;
  background-color: #F9F9F9;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.placeholder-item:last-child {
  margin-right: 0;
}

.text-placeholder {
  border-left: 4rpx solid #6E7BF2;
}

.image-placeholder {
  border-left: 4rpx solid #4CAF50;
}

.audio-placeholder {
  border-left: 4rpx solid #FF6B6B;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.placeholder-icon {
  font-size: 24rpx;
  background-color: #6E7BF2;
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}

.placeholder-content {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.placeholder-image {
  width: 100%;
  height: 120rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.placeholder-audio {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 修改打卡按钮区域，改为并列 */
.action-row {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.action-btn {
  width: 30%;
  height: 80rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-icon {
  font-size: 24rpx;
  color: white;
  margin-right: 10rpx;
} 