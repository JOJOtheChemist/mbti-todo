.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #F9F9F9;
}

.header {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.mbti-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.mbti-label {
  font-size: 28rpx;
  color: #666;
}

.mbti-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-right: 20rpx;
}

.retest-btn {
  font-size: 24rpx;
  color: #6E7BF2;
  padding: 4rpx 12rpx;
  border: 2rpx solid #6E7BF2;
  border-radius: 16rpx;
}

/* 新增：数据统计卡片样式 */
.statistics-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-wrap: wrap;
  position: relative;
}

.stat-item {
  flex: 1;
  min-width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
}

.stats-more {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #6E7BF2;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 6rpx;
}

/* 修改：日期导航容器 */
.days-nav-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.day-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6E7BF2;
  font-size: 28rpx;
}

.day-arrow.disabled {
  color: #CCC;
}

.arrow-icon {
  font-weight: bold;
}

.days-nav {
  flex: 1;
  display: flex;
  justify-content: space-between;
  background-color: white;
  border-radius: 16rpx;
  padding: 16rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.day-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60rpx;
}

.day-text {
  font-size: 22rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.day-item.active .day-text {
  color: #6E7BF2;
  font-weight: bold;
}

.day-item.disabled .day-text,
.day-item.locked .day-text {
  color: #CCC;
}

.day-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #E0E0E0;
}

.day-item.active .day-indicator {
  background-color: #6E7BF2;
}

.day-indicator.completed {
  background-color: #4CAF50;
}

/* 任务容器样式修改 */
.tasks-container {
  flex: 1;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
  position: relative;
}

/* 水平滑动容器 */
.days-slider {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  position: relative;
  display: flex;
  transition: transform 0.3s ease-out;
}

.day-content {
  width: 100%;
  flex-shrink: 0;
  padding: 10rpx;
}

.day-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.day-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.day-status {
  font-size: 22rpx;
  color: #4CAF50;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  background-color: #E8F5E9;
}

.day-status.locked-status {
  color: #FF0000;
  background-color: #FFEBEE;
}

.task-list {
  display: flex;
  flex-direction: column;
}

/* 增加任务卡片宽度和弹性 */
.task-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  position: relative;
  width: 500rpx;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.05);
  background-color: #fff;
  margin-left: auto;
  margin-right: auto;
  transition: all 0.3s ease;
  min-height: 150rpx; /* 最小高度确保盒子不会太小 */
  height: auto; /* 自动高度，根据内容自适应 */
}

.task-item:last-child {
  margin-bottom: 0;
}

.task-item.locked-mode {
  opacity: 0.7;
}

.task-content {
  flex: 1;
  width: 100%;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.task-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-category {
  font-size: 20rpx;
  color: #999;
  background-color: #F5F5F5;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
}

.task-reason {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 新增：打卡记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
  border-top: 1rpx dashed #eee;
  padding-top: 10rpx;
}

.record-item {
  display: flex;
  margin-bottom: 12rpx;
  padding: 10rpx;
  border-radius: 12rpx;
  background-color: #F9F9F9;
}

.record-time {
  font-size: 20rpx;
  color: #999;
  width: 120rpx; /* 增加宽度以显示更多时间信息 */
  min-width: 80rpx;
  margin-right: 10rpx;
  padding-top: 4rpx;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  word-wrap: break-word; /* 确保长文本能够换行 */
}

.record-image {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.record-audio {
  display: flex;
  align-items: center;
}

.audio-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.audio-text {
  font-size: 22rpx;
  color: #666;
}

/* 未解锁提示 */
.locked-hint {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 未解锁状态下的打卡容器 */
.locked-checkin-btns {
  display: flex;
  justify-content: space-between;
  margin: 0 0 16rpx;
  width: 100%;
}

.locked-checkin-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  background-color: #f0f0f0;
  color: #999;
  font-size: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.locked-checkin-btn:last-child {
  margin-right: 0;
}

.locked-text {
  font-size: 24rpx;
  color: #FF0000;  /* 修改为红色 */
  font-weight: bold;
}

/* 打卡按钮区域 */
.quick-checkin-btns {
  display: flex;
  justify-content: space-between;
  margin: 16rpx 0;
}

/* 圆角矩形按钮 */
.checkin-btn {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

.checkin-btn:last-child {
  margin-right: 0;
}

.checkin-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-label {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.text-btn {
  background-color: #6E7BF2;
}

.image-btn {
  background-color: #4CAF50;
}

.audio-btn {
  background-color: #FF6B6B;
}

.audio-btn.recording {
  background-color: #FF3030;
  box-shadow: 0 0 0 4rpx rgba(255, 48, 48, 0.3);
  animation: pulse 1s infinite;
}

/* 状态标签 */
.completion-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.completed-tag {
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  background-color: #4CAF50;
  color: white;
}

/* 报告按钮区域 */
.report-button-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.view-report-btn, .next-week-btn {
  width: 80%;
  height: 80rpx;
  font-size: 28rpx;
  color: white;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.view-report-btn {
  background-color: #6E7BF2;
}

.next-week-btn {
  background-color: #FF9500;
}

/* 打卡模态框 */
.checkin-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.checkin-modal.visible {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #F0F0F0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  flex: 1;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.checkin-form {
  margin-bottom: 20rpx;
}

.text-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.image-upload {
  width: 100%;
  height: 320rpx;
  border: 2rpx dashed #E0E0E0;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 50rpx;
  color: #CCC;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

.audio-record {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.record-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.record-btn.recording {
  background-color: #FF6B6B;
  box-shadow: 0 0 0 10rpx rgba(255, 107, 107, 0.3);
  animation: pulse 1s infinite;
}

.record-icon {
  font-size: 50rpx;
  margin-bottom: 8rpx;
}

.record-text {
  font-size: 24rpx;
  color: #666;
}

.record-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-text {
  font-size: 26rpx;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.rerecord-btn {
  font-size: 24rpx;
  color: #6E7BF2;
  padding: 8rpx 24rpx;
  border: 2rpx solid #6E7BF2;
  border-radius: 24rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #F0F0F0;
}

.submit-btn {
  background-color: #6E7BF2;
  color: white;
  font-size: 28rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(255, 48, 48, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10rpx rgba(255, 48, 48, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(255, 48, 48, 0);
  }
}

/* 文字打卡记录显示在为什么下方的样式 */
.text-record-display {
  margin: 16rpx 0;
  border-left: 4rpx solid #6E7BF2;
  padding-left: 16rpx;
}

.text-record-content {
  display: flex;
  flex-direction: column;
  background: #F5F7FF;
  padding: 12rpx;
  border-radius: 8rpx;
  position: relative;
}

.text-record-content .record-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10rpx;
  word-break: break-word;
}

.text-record-content .record-timestamp {
  font-size: 20rpx;
  color: #999;
  text-align: right;
} 