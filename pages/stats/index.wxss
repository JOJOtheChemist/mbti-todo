.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #F9F9F9;
}

.header {
  margin-bottom: 40rpx;
}

.title-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.mbti-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.mbti-label {
  font-size: 28rpx;
  color: #666;
}

.mbti-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #6E7BF2;
}

.date-range {
  font-size: 24rpx;
  color: #999;
}

.tab-bar {
  display: flex;
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.tab.active {
  background-color: #6E7BF2;
  color: white;
  font-weight: bold;
}

/* 统计数据视图 */
.stats-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stats-summary {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-card {
  width: 31%;
  background-color: white;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stats-section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 每日任务柱状图 */
.days-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
}

.chart-day {
  width: 12%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.day-bar-container {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.day-bar {
  width: 100%;
  background-color: #6E7BF2;
  border-radius: 6rpx 6rpx 0 0;
}

.day-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.day-value {
  font-size: 20rpx;
  color: #999;
}

/* 打卡分布 */
.checkin-distribution {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pie-chart {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
  border-radius: 50%;
}

.placeholder-chart {
  font-size: 28rpx;
  color: #999;
}

.checkin-legend {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  margin-right: 15rpx;
}

.legend-text {
  font-size: 26rpx;
  color: #666;
}

/* 成长报告视图 */
.report-view {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.report-card {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.report-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.report-content {
  display: flex;
  flex-direction: column;
}

.report-section {
  margin-bottom: 30rpx;
}

.section-subtitle {
  font-size: 30rpx;
  font-weight: bold;
  color: #6E7BF2;
  margin-bottom: 15rpx;
}

.report-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.report-text view {
  margin-bottom: 10rpx;
}

.next-steps {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.next-week-btn {
  width: 90%;
  height: 90rpx;
  background-color: #FF9500;
  color: white;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 